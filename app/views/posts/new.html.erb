<h1>New Post Form</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <li style="color:red"><%= error %></li>
    <% end %>
<% end %>
<br>        

<%= form_for @post do |f| %> 
<%= f.label :title %>
<%= f.text_field :title %><br>
<%= f.label :blogger %>
<%= f.collection_select :blogger_id, @bloggers, :id, :name %><br>
<%= f.label :destination %>
<%= f.collection_select :destination_id, @destinations, :id, :name %><br>
<%= f.label :content %>
<%= f.text_area :content %><br>
<%= f.submit :submit %>
<% end %>   

<br>
<%= link_to "cancel action", posts_path %>